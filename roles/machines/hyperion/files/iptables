*filter
:INPUT ACCEPT [0:0]
:FORWARD ACCEPT [0:0]
:OUTPUT ACCEPT [0:0]
-A INPUT -m state --state RELATED,ESTABLISHED -j ACCEPT
-A INPUT -p tcp -m state --state NEW -m tcp --dport 22    -j ACCEPT -m comment --comment "SSH: forwarding"
-A INPUT -p tcp -m state --state NEW -m tcp --dport 2222  -j ACCEPT -m comment --comment "SSH: to this machine"
-A INPUT -p tcp -m state --state NEW -m tcp --dport 80    -j ACCEPT -m comment --comment "HTTP: forwarding"
-A INPUT -j REJECT
-A FORWARD -j REJECT --reject-with icmp-host-prohibited
COMMIT
